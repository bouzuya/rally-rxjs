{
  "name": "rally-rxjs",
  "description": "rally-rxjs",
  "version": "0.2.0",
  "author": {
    "name": "bouzuya",
    "email": "m@bouzuya.net",
    "url": "http://bouzuya.net"
  },
  "bugs": {
    "url": "https://github.com/bouzuya/rally-rxjs/issues"
  },
  "dependencies": {
    "b-o-a": "0.2.0",
    "express": "^4.13.4",
    "htmlescape": "^1.1.0",
    "node-fetch": "^1.3.3",
    "path-to-regexp": "^1.2.1",
    "vdom-parser": "^1.2.1",
    "vdom-to-html": "^2.2.0",
    "virtual-dom": "^2.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "browserify": "^13.0.0",
    "intelli-espower-loader": "^1.0.1",
    "less": "^2.6.0",
    "mocha": "^2.3.4",
    "nodemon": "^1.9.1",
    "parallelshell": "^2.0.0",
    "power-assert": "^1.2.0",
    "typescript": "^1.7.5",
    "typings": "^0.6.3",
    "watch": "^0.17.1",
    "watchify": "^3.7.0"
  },
  "homepage": "https://github.com/bouzuya/rally-rxjs#readme",
  "keywords": [],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bouzuya/rally-rxjs"
  },
  "scripts": {
    "prebuild": "[ -d dist/scripts ] || mkdir -p dist/scripts",
    "build": "npm run build-ts && npm run build-es2015 && npm run cp && npm run build-browserify && npm run build-less",
    "build-browserify": "browserify -o dist/scripts/bundle.js client.js",
    "build-es2015": "babel --presets es2015 --out-dir .tmp/es5/ .tmp/es2015/ >/dev/null",
    "build-less": "lessc src/app/styles/index.less dist/styles/index.css",
    "build-ts": "tsc",
    "clean": "rm -rf lib/ .tmp/ dist/ bundle.js",
    "cp": "cp -r .tmp/es5/src/ lib/",
    "prepublish": "typings install && npm run clean && npm run build",
    "start": "node server.js",
    "test": "npm run build && mocha --recursive --require intelli-espower-loader .tmp/es5/test/",
    "watch": "npm run build && parallelshell 'npm run watch-ts' 'npm run watch-es2015' 'npm run watch-cp' 'npm run watch-browserify' 'npm run watch-less'",
    "watch-browserify": "watchify -v -o dist/scripts/bundle.js client.js",
    "watch-cp": "watch --ignoreUnreadable --wait 2 'npm run cp' .tmp/es5/src/",
    "watch-es2015": "watch --ignoreUnreadable --wait 2 'npm run build-es2015' .tmp/es2015/src/",
    "watch-less": "watch --ignoreUnreadable --wait 2 'npm run build-less' src/app/styles/",
    "watch-test": "mocha --watch --recursive --require intelli-espower-loader .tmp/es5/test/",
    "watch-ts": "tsc --watch"
  }
}
