{
  "name": "rally-rxjs",
  "description": "rally-rxjs",
  "version": "0.3.0",
  "author": {
    "name": "bouzuya",
    "email": "m@bouzuya.net",
    "url": "http://bouzuya.net"
  },
  "ava": {
    "files": [
      ".tmp/test"
    ],
    "source": [
      "!**/*.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/bouzuya/rally-rxjs/issues"
  },
  "dependencies": {
    "b-o-a": "0.4.0",
    "boajs-handler-dom": "^0.2.0",
    "boajs-handler-history": "^0.1.0",
    "boajs-router": "^0.3.0",
    "boajs-vdom": "^0.1.1",
    "express": "^4.13.4",
    "htmlescape": "^1.1.0",
    "node-fetch": "^1.3.3",
    "vdom-to-html": "^2.2.0",
    "virtual-dom": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^0.13.0",
    "browserify": "^13.0.0",
    "less": "^2.6.0",
    "nodemon": "^1.9.1",
    "parallelshell": "^2.0.0",
    "typescript": "^1.7.5",
    "typings": "^0.7.7",
    "watch": "^0.17.1",
    "watchify": "^3.7.0"
  },
  "homepage": "https://github.com/bouzuya/rally-rxjs#readme",
  "keywords": [],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bouzuya/rally-rxjs"
  },
  "scripts": {
    "build": "npm run build-ts && npm run cp && npm run build-browserify && npm run build-less",
    "build-browserify": "browserify -o dist/scripts/bundle.js client.js",
    "build-less": "lessc src/app/style/index.less dist/styles/index.css",
    "build-ts": "tsc",
    "clean": "rm -rf lib/ .tmp/ dist/ bundle.js",
    "cp": "cp -R .tmp/src/* lib/",
    "md1": "[ -d .tmp/src ] || mkdir -p .tmp/src",
    "md2": "[ -d dist/scripts ] || mkdir -p dist/scripts",
    "md3": "[ -d lib ] || mkdir lib",
    "prebuild": "parallelshell 'npm run md1' 'npm run md2' 'npm run md3'",
    "prepublish": "typings install",
    "start": "nodemon server.js",
    "test": "ava",
    "watch": "parallelshell 'npm run watch-ts' 'npm run watch-cp' 'npm run watch-browserify' 'npm run watch-less' 'npm run watch-test'",
    "watch-browserify": "watchify -v -o dist/scripts/bundle.js client.js",
    "watch-cp": "watch --ignoreUnreadable --wait 5 'npm run cp' .tmp/src/",
    "watch-less": "watch --ignoreUnreadable --wait 5 'npm run build-less' src/app/style/",
    "watch-test": "ava --watch",
    "watch-ts": "tsc --watch"
  }
}
